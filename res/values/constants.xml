<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        A key-value mapping for the interval to poll Sense. Note that
        `poll_sense_labels` and `poll_sense_values` must always have
        the same amount of elements!
    -->
    <string-array name="poll_sense_labels">
        <item>@string/poll_sense_5s</item>
        <item>@string/poll_sense_10s</item>
        <item>@string/poll_sense_30s</item>
        <item>@string/poll_sense_1m</item>
        <item>@string/poll_sense_5m</item>
    </string-array>
    <string-array name="poll_sense_values">
        <item>5</item>
        <item>10</item>
        <item>30</item>
        <item>60</item>
        <item>300</item>
    </string-array>

    <!--
        A key-value mapping for the sync-rate. Note that `sync_rate_labels`
        and `sync_rate_values` must always have the same amount of elements!
    -->
    <string-array name="sync_rate_labels">
        <item>@string/sync_real_time</item>
        <item>@string/sync_often</item>
        <item>@string/sync_normal</item>
        <item>@string/sync_rarely</item>
    </string-array>
    <string-array name="sync_rate_values">
        <item>-2</item>
        <item>-1</item>
        <item>0</item>
        <item>1</item>
    </string-array>

    <!--
        A key-value mapping for the sample-rate. Note that `sample_rate_labels`
        and `sample_rate_values` must always have the same amount of elements!
    -->
    <string-array name="sample_rate_labels">
        <item>@string/sample_real_time</item>
        <item>@string/sample_often</item>
        <item>@string/sample_normal</item>
        <item>@string/sample_eco_mode</item>
    </string-array>
    <string-array name="sample_rate_values">
        <item>-2</item>
        <item>-1</item>
        <item>0</item>
        <item>1</item>
    </string-array>

</resources>
