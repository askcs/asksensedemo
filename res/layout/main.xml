<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="20dp">

        <!-- activity -->
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity"
            android:paddingBottom="10dp"
            android:textSize="25dp"/>

        <RadioGroup
            android:id="@+id/id_radio_group_activity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/id_radio_activity_enabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enabled"
                android:paddingLeft="50dp"
                android:paddingRight="25dp"/>

            <RadioButton
                android:id="@+id/id_radio_activity_disabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disabled"
                android:paddingLeft="50dp"/>

        </RadioGroup>

        <!-- location -->
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/location"
            android:paddingBottom="10dp"
            android:paddingTop="20dp"
            android:textSize="25dp"/>

        <RadioGroup
            android:id="@+id/id_radio_group_location"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/id_radio_location_enabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enabled"
                android:paddingLeft="50dp"
                android:paddingRight="25dp"/>

            <RadioButton
                android:id="@+id/id_radio_location_disabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disabled"
                android:paddingLeft="50dp"/>

        </RadioGroup>

        <!-- presence -->
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/presence"
            android:paddingBottom="10dp"
            android:paddingTop="20dp"
            android:textSize="25dp"/>

        <RadioGroup
            android:id="@+id/id_radio_group_presence"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/id_radio_presence_enabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enabled"
                android:paddingLeft="50dp"
                android:paddingRight="25dp"/>

            <RadioButton
                android:id="@+id/id_radio_presence_disabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disabled"
                android:paddingLeft="50dp"/>

        </RadioGroup>

    </LinearLayout>

</ScrollView>
